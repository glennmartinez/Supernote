<h2>New note</h2>

<form id="new-note" name="note">
  <div class="field">
    <label for="title"> title:</label>
    <input type="text" name="title" id="title" value=<%= title %> >
  </div>

  <div class="field">
    <label for="content"> content:</label>
  
  <textarea class="input-xlarge" rows="10" id="textarea" name="content"><%=content %> </textarea>
   
  </div>

  <div class="field">
    <label for="tag"> tag:</label>
    <input type="text" name="tag" id="tag" value=<%= tag %> >
  </div>

  <div class="actions">
    <input class="btn btn-success btn-medium" type="submit" value="Create Note" />
  </div>

</form>